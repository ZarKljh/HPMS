CREATE TABLE TBL_PATIENT_M (
    ID INT PRIMARY KEY AUTO_INCREMENT,
    FIRST_NAME VARCHAR(50) NOT NULL,
    LAST_NAME VARCHAR(50) NOT NULL,
    MIDDLE_NAME VARCHAR(50),
    PASS_FIRST_NAME VARCHAR(50),
    PASS_LAST_NAME VARCHAR(50),
    PASS_MIDDLE_NAME VARCHAR(50),
    GENDER VARCHAR(1) NOT NULL,
    DAY_OF_BIRTH INT NOT NULL,
    FOREIGNER VARCHAR(1) NOT NULL,
    PASSPORT VARCHAR(20),
    CREATEDATE DATETIME NOT NULL DEFAULT NOW(),
    UPDATEDATE DATETIME NOT NULL DEFAULT NOW(),
    DEL_STATUS INT DEFAULT 0
);
CREATE TABLE TBL_PATIENT_DTL (
    ID INT PRIMARY KEY AUTO_INCREMENT,
    PA_ID INT NOT NULL,
    MO_PHONE_NUM VARCHAR(20) NOT NULL,
    HOME_PHONE_NUM VARCHAR(20),
    OFFICE_PHONE_NUM VARCHAR(20),
    EMAIL VARCHAR(50),
    FAX VARCHAR(20),
    GURAD_TEL VARCHAR(20) NOT NULL,
    GURAD_RELA VARCHAR(20) NOT NULL,
    GURAD_FIRST_NAME VARCHAR(50) NOT NULL,
    GURAD_LAST_NAME VARCHAR(50) NOT NULL,
    GURAD_MIDDLE_NAME VARCHAR(50),
    CUR_HOME_PCD VARCHAR(10),
    CUR_HOME_DEF_ADD VARCHAR(255),
    CUR_HOME_DET_ADD VARCHAR(255),
    REG_HOME_PCD VARCHAR(10),
    REG_HOME_DEF_ADD VARCHAR(255),
    REG_HOME_DET_ADD VARCHAR(255),
    OCCUPATION VARCHAR(50),
    LASTVISIT_DATE DATETIME DEFAULT NOW() NOT NULL,
    NATN VARCHAR(50),
    NOTE TEXT,
    CONSTRAINT FK_PATIENT FOREIGN KEY (PA_ID) REFERENCES TBL_PATIENT_M(ID)
);

CREATE TABLE TBL_PATIENT_H (
    ID INT PRIMARY KEY AUTO_INCREMENT,
    PA_ID INT NOT NULL,
    FIRST_NAME VARCHAR(50) NOT NULL,
    LAST_NAME VARCHAR(50) NOT NULL,
    MIDDLE_NAME VARCHAR(50),
    PASS_FIRST_NAME VARCHAR(50),
    PASS_LAST_NAME VARCHAR(50),
    PASS_MIDDLE_NAME VARCHAR(50),
    GENDER VARCHAR(1) NOT NULL,
    DAY_OF_BIRTH INT(8) NOT NULL,
    FOREIGNER INT(1) NOT NULL DEFAULT 0,
    PASSPORT VARCHAR(10),
    CREATEDATE DATETIME NOT NULL DEFAULT NOW(),
    UPDATEDATE DATETIME NOT NULL DEFAULT NOW(),
    DEL_STATUS INT(1) DEFAULT 0,
    MO_PHONE_NUM VARCHAR(20) NOT NULL,
    HOME_PHONE_NUM VARCHAR(20),
    OFFICE_PHONE_NUM VARCHAR(20),
    EMAIL VARCHAR(150),
    FAX VARCHAR(20),
    GURAD_TEL VARCHAR(20) NOT NULL,
    GURAD_RELA VARCHAR(20) NOT NULL,
    GURAD_FIRST_NAME VARCHAR(50) NOT NULL,
    GURAD_LAST_NAME VARCHAR(50) NOT NULL,
    GURAD_MIDDLE_NAME VARCHAR(50),
    CUR_HOME_PCD VARCHAR(50),
    CUR_HOME_DEF_ADD VARCHAR(255),
    CUR_HOME_DET_ADD VARCHAR(255),
    REG_HOME_PCD VARCHAR(10),
    REG_HOME_DEF_ADD VARCHAR(255),
    REG_HOME_DET_ADD VARCHAR(255),
    OCCUPATION VARCHAR(50),
    LASTVISIT_DATE DATETIME NOT NULL DEFAULT NOW(),
    NATN VARCHAR(50),
    NOTE TEXT,
    CONSTRAINT FK_PATIENT_H FOREIGN KEY (PA_ID) REFERENCES TBL_PATIENT_M(ID)
);
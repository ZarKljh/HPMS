CREATE TABLE HOSPITAL (
	ID INT(10) UNSIGNED NOT NULL PRIMARY KEY AUTO_INCREMENT COMMENT '테이블 고유값, 자동 증가, 병원 고유 ID',
	HOSPITAL_GROUP ENUM('GP', 'SH', 'GH') NOT NULL COMMENT '병원 분류: GP(1차), SH(2차), GH(3차), "GP,SH,GH"만 입력 가능',
   H_NAME VARCHAR(250) NOT NULL COMMENT '병원 이름',
   H_PCD INT(6) NOT NULL COMMENT '병원 우편번호',
   DEF_ADD VARCHAR(250) NOT NULL COMMENT '병원 기본주소',
   DET_ADD VARCHAR(250) COMMENT '병원 상세주소',
   GDN VARCHAR(12) COMMENT '병원 대표번호',
   DOCTOR INT(4) COMMENT '근무하는 의사의 수',
   NURSE INT(4) COMMENT '근무하는 간호사의 수',
   STS VARCHAR(10) COMMENT '상태(운영중, 폐업 등)',
   NOTE VARCHAR(250)
);
CREATE TABLE MEDICAL_DEPARTMENT (
   ID INT AUTO_INCREMENT PRIMARY KEY COMMENT '고유 ID',
   KOREAN_NAME VARCHAR(100) NOT NULL COMMENT '과목명(한글)',
   CODE VARCHAR(20) NOT NULL COMMENT '과목 코드 (약어)',
   ENGLISH_NAME VARCHAR(200) NOT NULL COMMENT '과목명(영문)',
   UNIQUE (KOREAN_NAME, CODE) -- 동일 과목명 + 코드 중복 방지
);

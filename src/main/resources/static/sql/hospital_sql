CREATE TABLE HOSPITAL_ADMINISTRATION_DEPT (
   ID INT AUTO_INCREMENT PRIMARY KEY COMMENT '고유 ID',
   CODE VARCHAR(10) NOT NULL UNIQUE COMMENT '부서 코드',
   DISPLAY_NAME VARCHAR(100) NOT NULL COMMENT '부서 국문명',
   ENG_NAME VARCHAR(200) NOT NULL COMMENT '부서 영문명',
   CATEGORY VARCHAR(50) DEFAULT '병원 행정' COMMENT '구분 카테고리'
);
INSERT INTO HOSPITAL_ADMINISTRATION_DEPT (CODE, DISPLAY_NAME, ENG_NAME) VALUES
('PAD', '원무팀', 'Patient Administration Department'),
('GAD', '총무팀', 'General Affairs Department'),
('PLD', '구매물류팀', 'Procurement & Logistics Department'),
('SPBD', '기획예산팀', 'Strategic Planning & Budget Department'),
('HRD', '인사팀', 'Human Resources Department'),
('METD', '교육수련팀', 'Medical Education & Training Department'),
('HIMD', '의무기록팀', 'Health Information Management Department');
CREATE TABLE HOSPITAL_ADMINISTRATION_TASK (
   ID INT AUTO_INCREMENT PRIMARY KEY COMMENT '고유 ID',
   DEPT_CODE VARCHAR(10) NOT NULL COMMENT '부서 코드 (FK)',
   CODE VARCHAR(10) NOT NULL COMMENT '업무 코드',
   DISPLAY_NAME VARCHAR(100) NOT NULL COMMENT '업무 국문명',
   ENG_NAME VARCHAR(200) NOT NULL COMMENT '업무 영문명',
   FOREIGN KEY (DEPT_CODE) REFERENCES HOSPITAL_ADMINISTRATION_DEPT(CODE)
);

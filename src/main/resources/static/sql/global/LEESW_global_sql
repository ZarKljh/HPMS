CREATE TABLE TBL_SITE_USER (
ID INT AUTO_INCREMENT PRIMARY KEY COMMENT '테이블 고유값, 자동 증가',
USER_ID VARCHAR(20) NOT NULL UNIQUE COMMENT '로그인에 필요한 USERID',
PASSWORD VARCHAR(255) NOT NULL COMMENT '로그인에 필요한 PASSWORD (암호화 저장 권장)',
LAST_NAME VARCHAR(50) NOT NULL COMMENT '사용자 성명 성',
FIRST_NAME VARCHAR(50) NOT NULL COMMENT '사용자 성명 이름',
MIDDLE_NAME VARCHAR(50) NULL COMMENT '사용자 성명 중간이름',
MOBILE_PHONE VARCHAR(25) NOT NULL COMMENT '사용자 휴대전화, 하이픈(-) 없이 저장',
EMAIL VARCHAR(250) NULL COMMENT '사용자 이메일',
ROLE VARCHAR(20) NULL COMMENT '직책: N=간호사, D=의사, R=지원부서, S=시스템관리자',
ROLE_ID INT NULL COMMENT '직책별 직원정보테이블과 연결을 위한 ID값',
STATUS VARCHAR(20) DEFAULT 'ACTIVE' COMMENT '계정 상태: ACTIVE, SUSPENDED',
CREATEDATE DATETIME NOT NULL DEFAULT NOW() COMMENT '계정 생성일'
) COMMENT='로그인 계정 관리 테이블';

